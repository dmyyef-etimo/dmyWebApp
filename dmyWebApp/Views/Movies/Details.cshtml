@model dmyWebApp.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    @if (Model.ReleaseDate.HasValue)
    {
        <li>@Model.ReleaseDate.Value.ToString(format: "dd/MM/yyyy")</li>
    }
    @if (Model.AddedDate.HasValue)
    {
        <li>@Model.AddedDate.Value.ToString(format: "dd/MM/yyyy")</li>
    }
    @if (Model.InStock.HasValue)
    {
        <li>@Model.InStock.Value</li>
    }
</ul>