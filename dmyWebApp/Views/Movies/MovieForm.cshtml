@model dmyWebApp.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.ActionName</h2>

@using (Html.BeginForm(actionName: "Update", controllerName: "Movies", method: FormMethod.Post, htmlAttributes: new {@class = "form"}))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name, htmlAttributes: new {@class = "form-control"})
        @Html.TextBoxFor(m => m.Movie.Name, htmlAttributes: new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate, htmlAttributes: new {@class = "form-control"})
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, format: "{0:dd MMM yyyy}", htmlAttributes: new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId,
            selectList: new SelectList(Model.Genres, dataValueField: "Id", dataTextField: "Name"),
            optionLabel: "Select...",
            htmlAttributes: new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.InStock)
        @Html.TextBoxFor(m => m.Movie.InStock)
    </div>

    @Html.HiddenFor(m => m.Movie.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}