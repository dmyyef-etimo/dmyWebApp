@model IEnumerable<dmyWebApp.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink(linkText: "New Movie", actionName: "Create", routeValues: null, htmlAttributes: new {@class = "btn btn-primary"})

@if (Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, actionName: "Edit", controllerName: "Movies", routeValues: new {id = movie.Id}, htmlAttributes: new {})
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No movies yet!</p>
}