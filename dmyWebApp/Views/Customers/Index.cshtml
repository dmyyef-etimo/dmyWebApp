@model IEnumerable<dmyWebApp.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Any())
{
    <h4>Customer</h4>
    <ul>
        @foreach (var customer in Model)
        {
            <li>@Html.ActionLink(customer.Name, actionName: "Customer", controllerName: "Customers", routeValues: new {id = customer.Id}, htmlAttributes: new {})</li>
        }
    </ul>
}
else
{
    <p>No customers yet</p>
}